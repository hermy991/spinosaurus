  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno Debug",
      "request": "launch",
      "type": "pwa-node",
      // "program": "tests/start.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-brk",
        "--import-map=./tests/importmap.json",
        "--config=./tests/tsconfig.json",
        "--allow-all",
        "tests/start.ts"
      ],
      "attachSimplePort": 9229
    }
  ]
}